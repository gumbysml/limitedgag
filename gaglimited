-- Load Rayfield Library
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- Create the Main Window
local Window = Rayfield:CreateWindow({
    Name = "Grow A Garden Limited",
    LoadingTitle = "Grow A Garden Limited",
    LoadingSubtitle = "Powered by Rayfield UI",
    ConfigurationSaving = {
        Enabled = false
    },
    Discord = {
        Enabled = false
    },
    KeySystem = false
})

-- Create the Main Tab
local MainTab = Window:CreateTab("Items", 4483362458)

-- Function to create a fake tool and give it to the player
local function giveTool(name)
    local tool = Instance.new("Tool")
    tool.Name = name
    tool.RequiresHandle = false
    tool.CanBeDropped = true
    tool.Parent = game.Players.LocalPlayer.Backpack
end

-- Button: Get Candy Blossom Seed (Kick Player)
MainTab:CreateButton({
    Name = "Get Candy Blossom Seed",
    Callback = function()
        game.Players.LocalPlayer:Kick("You have collected the Candy Blossom Seed! Thanks for playing!")
    end,
})

-- Button: Get Raccoon (Give Item)
MainTab:CreateButton({
    Name = "Get Raccoon",
    Callback = function()
        giveTool("Raccoon [521.82 KG] [Age 100]")
    end,
})
