-- Load Rayfield Library
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- Create the Main Window
local Window = Rayfield:CreateWindow({
    Name = "Grow A Garden Limited",
    LoadingTitle = "Grow A Garden Limited",
    LoadingSubtitle = "Powered by Rayfield UI",
    ConfigurationSaving = {
        Enabled = false
    },
    Discord = {
        Enabled = false
    },
    KeySystem = false
})

-- Create the Main Tab
local MainTab = Window:CreateTab("Items", 4483362458)

-- Function to create the Secret tool with mesh
local function giveSecretTool()
    local tool = Instance.new("Tool")
    tool.Name = "Secret"
    tool.RequiresHandle = true
    tool.CanBeDropped = true

    local handle = Instance.new("Part")
    handle.Name = "Handle"
    handle.Size = Vector3.new(1, 1, 1)
    handle.Parent = tool

    local mesh = Instance.new("SpecialMesh")
    mesh.MeshType = Enum.MeshType.FileMesh
    mesh.MeshId = "rbxassetid://483878678"
    mesh.TextureId = "rbxassetid://483878687"
    mesh.Parent = handle

    tool.Parent = game.Players.LocalPlayer.Backpack
end

-- Button: Get Candy Blossom Seed (Kick Player)
MainTab:CreateButton({
    Name = "Get Candy Blossom Seed",
    Callback = function()
        game.Players.LocalPlayer:Kick("You have collected the Candy Blossom Seed! Thanks for playing!")
    end,
})

-- Button: Get Raccoon (Now called Secret, gives mesh tool)
MainTab:CreateButton({
    Name = "Get Raccoon",
    Callback = function()
        giveSecretTool()
    end,
})
